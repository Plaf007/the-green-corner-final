<div class="container">
    <%= link_to "Back", products_path, class: "btn btn-outline-secondary btn-sm" %>
</div>
<div class="container mt-4 ">
  <div class="row d-flex justify-content-center mt-3 rounded-2">
    <h1 class="h1-cart text-center" style="text-shadow: 1px 1px 1px #000000;">Shopping cart</h1>
  </div>
  <div class="container mt-4 ">
    <h4 class="product-list-title">Products list</h2>
  </div>
  <div class="container mt-3">
    <% @cart.selected_products.each do |selected_product| %>
      <div class="card mb-3 card-hover shadow p-3 mb-5">
        <div class="row g-0">
          <div class="col-md-4 r">
            <% if selected_product.product.photo.attached? %>
              <%= image_tag cart.selected_product.photo, class: 'product-image', height: 200, width: 300, crop: :fill  %>
            <% else %>
              <p>No image available</p>
            <% end %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= cart.selected_products.product.title %></h5>
              <p class="product-description"><%= cart.selected_products.product.description %></p>
              <p class="card-text">
                <small class="text-muted">Part number: <%= cart.selected_products.product.id %></small>
              </p>
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <label class="text-muted">Precio:</label>
                  <span class="text-muted"><%= number_to_currency(cart.selected_products.price) %></span>
                </div>
                <div>
                  <label class="text-muted">Total:</label>
                  <span class="text-muted"><%= @total_due %></span>
                </div>
                <div>
                  <label for="quantity-<%= cart.selected_products.id %>" class="text-muted">Cantidad:</label>
                  <input id="quantity-<%= cart.selected_products.id %>" class="form-control quantity-input" type="number" value="<%= cart.selected_products.quantity %>" min="0" name="product_quantity">
                </div>
                <div>
                  <%= button_to 'Update', update_product_path(product_id: cart.selected_products.product.id), class: "btn btn-outline-secondary btn-sm" %>
                  <%= link_to 'Remove', "#", method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-secondary btn-sm" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-end">
    <div class="text-end">
      <h3 class="product-total-title">Total: <%= number_to_currency(@total_due) %></h3>
      <%= button_to 'Place Order', orders_path, class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
</div>
