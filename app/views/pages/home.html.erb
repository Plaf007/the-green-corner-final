
  <div>


   <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
       <div class="carousel-item active">
      <img src="https://res.cloudinary.com/dyptqsblk/image/upload/v1704646699/banner1_pr5l4w.png" class="d-flex justify-content-center w-100" alt="...">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
  </div>
  <div class="card-container">
  <section class="my-5">


    <div class="card-container-fluid mx-3">
      <div class=" text-center pb-3">
        <h2>Productos Destacados</h2>
      </div>
      <div class="container-fluid pb-3">
        <%= link_to "Products", products_path, class: "btn btn-return btn-m " %>
      </div>
      <div class="row justify-content-center">
        <% @products.last(12).each do |product| %>
          <div class="col-3 mb-3 rounded-4 custom-card-background card-hover mx-2 g-0">
            <div class="card h-100 d-flex flex-column border-0 rounded-4">
              <%= image_tag product.photo, class: 'card-img-top  rounded-top-4 img-fluid', style: 'object-fit: cover; height: 150px;' if product.photo.attached? %>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= product.title %></h5>
                <p class="card-text flex-grow-1"><%= product.description %></p>

                <p class="card-text"><strong>Precio:</strong> <%= number_to_currency(product.price) %></p>
              </div>
              <div class="mt-auto p-3">
                <%= link_to 'Ver Producto', product_path(product), class: 'btn btn-custom mb-3' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
  </div>
</div>
