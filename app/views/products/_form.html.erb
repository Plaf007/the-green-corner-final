  <div class="container">
    <div class="row d-flex justify-content-center pb-5">
      <div class="col-12 offset-lg-3">
        <div class="bg-white  p-3 rounded-4 custom-card-background card-shadow">
          <h3>Create a new product</h3>
          <%= simple_form_for @product do |f| %>
            <%= f.input :title, placeholder: 'Producto', label: "Nombre" %>
            <%= f.input :details, placeholder: "Add details here..." %>
            <%= f.input :description, placeholder: "Add your description here..." %>
            <%= f.input :category, collection: Product.categories.keys%>
            <%= f.input :quantity, placeholder: 1 %>
            <%= f.input :price, placeholder: 1 %>
            <%= f.input :virtual_cash, placeholder: 1 %>
            <%= f.input :photo, as: :file, required: true %>
            <%= f.submit class: 'btn btn-success' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
