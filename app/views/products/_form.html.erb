
<div class="container">
  <div class="row d-flex justify-content-center pb-5">
    <div class="col-12 offset-lg-3">
      <div class="bg-white rounded p-3 rounded-4 custom-card-background card-shadow">
        <h3>Editar el producto</h3>
        <%= simple_form_for @product do |f| %>
          <%= f.input :title, placeholder: 'Producto', label: "Nombre" %>
          <%= f.input :details, placeholder: "Agregar detalles aquí...", label: "Detalles" %>
          <%= f.input :description, placeholder: "Agrega tu descripción aquí...", label: "Descripción" %>
          <%= f.input :category, collection: Product.categories.keys, label: "Categoría" %>
          <%= f.input :quantity, placeholder: 1, label: "Cantidad disponible" %>
          <%= f.input :price, placeholder: 1, label: "Precio" %>
          <%= f.input :virtual_cash, placeholder: 1, label: "Green Money que proporciona" %>
          <% if @product.photo.attached? %>
            <%= image_tag @product.photo, size: "300x300" %>
          <% end %>
          <%= f.input :photo, as: :file, required: true, label: "Foto (Sube una imagen)" %>
          <%= f.submit "Guardar cambios", class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
