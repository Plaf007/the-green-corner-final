  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag "sustainablewatch.jpg", class: "card d-block border-0 w-100 imgcarousel" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "solarenergydevice.webp", class: "card d-block border-0 w-100 imgcarousel" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "sustainablecoffee.jpg", class: "card d-block border-0 w-100 imgcarousel" %>
    </div>
