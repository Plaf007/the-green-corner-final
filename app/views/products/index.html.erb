<div class="container">
  <div class="row">
    <div class="col">
      <% if @query %>
        <p>You searched for <strong><%= @query %></strong>. We found <%= @products.count %> products out of our <%= Product.count %> on our website.</p>
      <% else %>
        <p>All <%= Product.count %> products.</p>
      <% end %>
    </div>
  </div>
</div>

<div class="container pt-3">
  <% if user_signed_in? %>
    <%= link_to "Add a Product", new_product_path, class: "btn btn-danger mb-1" %>
  <% end %>
</div>

<div class="container pt-1">
    <%= link_to "Return Home", root_path, class: "btn btn-return btn-m" %>
</div>

<div class="container pt-3">
  <div class="row justify-content-center pb-5">
        <% @products.each do |product| %>
          <div class="col-3 mb-3 rounded-4 custom-card-background card-hover mx-2 g-0">
            <div class="card h-100 d-flex flex-column border-0 rounded-4">
              <%= image_tag product.photo, class: 'card-img-top  rounded-top-4', style: 'object-fit: cover; height: 150px;' if product.photo.attached? %>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= product.title %></h5>
                <p class="card-text flex-grow-1"><%= product.description %></p>
                <div class="d-flex justify-content-between">
                  <p class="card-text"><strong>Precio:</strong> <%= number_to_currency(product.price) %></p>
                  <p class="card-text"><strong>Puntaje:</strong> <%= product.reviews.sum(:rating).fdiv(product.reviews.count) unless product.reviews.count.zero? %></p>
                </div>
              </div>
              <div class="mt-auto p-3 d-flex justify-content-between align-items-center">
                <%#= button_to 'Ver Producto', product_path(product), class: 'btn btn-custom' %>
            <%#= link_to "Add to cart", "", class: " d-flex btn btn-danger text-white flex-nowrap"%>
                    <%=form_with url: product_path(product), method:"GET" do |f| %>
                      <%=  f.submit "Ver producto" , class: "btn btn-custom"%>
                    <% end  %>

                <% if user_signed_in? %>
                  <% if current_user.id != product.user_id %>
                    <%=form_with url: "/selected_products", method:"POST", data:{turbo:false} do |f| %>
                      <%= hidden_field_tag :product_id, product.id %>
                      <%=  f.submit "Add to cart" , class: "btn btn-custom"%>
                    <% end  %>

                  <% end  %>

                    <% else %>
                      <div class=" pt-1">
                        <%= link_to "Sign in to Add to Cart", new_user_session_path, class: "btn btn-custom" %>
                      </div>
                    <% end %>

              </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
