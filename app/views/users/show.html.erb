<body class="pt-5">
  <div class="container content-user">
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8 col-sm-10 content-user">
        <div class="bg-white  p-3 rounded-4 custom-card-background card-shadow">
          <% if @user.photo.attached? %>
            <%= image_tag @user.photo, class: "card-img-top card-img-rounded-top", style: "width: 200px; height: 200px; object-fit: cover;" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= @user.first_name %> <%= @user.last_name %></h5>
            <p class="card-text">
              <strong>Direcci√≥n:</strong> <%= @user.address %><br>
              <strong>Correo:</strong> <%= mail_to @user.email %><br>
              <strong>Virtual Cash:</strong> <%= number_to_currency(@user.total_virtual_cash) %>
            </p>
            <%= link_to "Mis pedidos", orders_path, class: "btn btn-primary btn-sm btn-custom" %>
            <%= link_to 'Editar', edit_user_path(@user), class: "btn btn-custom" %>
            <%= link_to 'Volver', root_path, class: "btn btn-return btn-m" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
